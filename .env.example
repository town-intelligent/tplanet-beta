# TPlanet Deploy - Environment Variables
# Copy this file to .env and modify as needed

# =============================================================================
# Database - Default Tenant
# =============================================================================
DB_NAME=tplanet
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db

# =============================================================================
# Database - Nantou Tenant (Multi-tenant only)
# =============================================================================
NANTOU_DB_NAME=tplanet
NANTOU_DB_USER=postgres
NANTOU_DB_PASSWORD=postgres
NANTOU_DB_HOST=db-nantou

# =============================================================================
# Ollama / LLM
# =============================================================================
OLLAMA_MODEL=qwen2:7b-instruct
# Optional: required if you want to use "openai/*" models (e.g. openai/gpt-4o-mini)
OPENAI_API_KEY=

# =============================================================================
# Frontend
# =============================================================================
VITE_HOST_URL_TPLANET=https://multi-tenant.4impact.cc
VITE_API_LLMTWINS=https://multi-tenant.4impact.cc

# =============================================================================
# Backend
# =============================================================================
DJANGO_SETTINGS_MODULE=backend.settings_multitenant
DEBUG=True
SECRET_KEY=your-secret-key-here

# =============================================================================
# LLMTwins Wrapper (Multi-tenant)
# =============================================================================
# Empty = allow all tenants (recommended for dynamic tenant creation)
VALID_TENANTS=
